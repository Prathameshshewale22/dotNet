@using BusinessObjectLayer;
@model Product;
@{
    ViewData["Title"] = "AddProduct Page";
}

<form action="/Products/AddData" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Product id</label>
    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Pid">
    @* <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> *@
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Product Name</label>
    <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Pname">
  </div>
   <div class="form-group">
    <label for="desc">Description</label>
    <input type="text" class="form-control" id="desc" asp-for="Description">
  </div>
   <div class="form-group">
    <label for="price">Price</label>
    <input type="number" class="form-control" id="price" asp-for="Price">
  </div>
   <div class="form-group">
    <label for="qty">Quantity</label>
    <input type="number" class="form-control" id="qty" asp-for="Quntity">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>